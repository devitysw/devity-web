---
interface Props {
    title: string;
}

const { title } = Astro.props;

import "../styles/base.css";
import favicon from "../assets/logo/favicon.ico";
---

<!doctype html>
<html lang="en">
    <head>
        <meta charset="UTF-8" />
        <meta http-equiv="X-UA-Compatible" content="IE=edge" />
        <meta name="viewport" content="width=device-width, initial-scale=1.0" />
        <meta name="theme-color" content="#2a28a4" />
        <meta name="description" content="DEVITY Software online portfolio." />
        <title>{title} | DEVITY Software</title>
        <link
            rel="shortcut icon"
            type="image/x-icon"
            href={favicon}
            id="tabFavicon"
        />

        <link rel="preconnect" href="https://fonts.googleapis.com" />
        <link rel="preconnect" href="https://fonts.gstatic.com" crossorigin />
        <link
            href="https://fonts.googleapis.com/css2?family=Montserrat:wght@100;200;300;500;600;700;800&display=swap"
            rel="stylesheet"
        />
    </head>
    <body>
        <slot />
    </body>
</html>
